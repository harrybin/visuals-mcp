{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2022"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "node"
        ],
        "outDir": "dist",
        "rootDir": "."
    },
    "include": [
        "server.ts",
        "types.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}