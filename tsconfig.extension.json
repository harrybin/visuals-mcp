{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "ES2020"
        ],
        "outDir": "./out",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "sourceMap": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src/extension.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "out"
    ]
}