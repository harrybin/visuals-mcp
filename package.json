{
    "name": "@harrybin/visuals-mcp",
    "version": "1.4.0",
    "description": "MCP server providing interactive visualizations: tables with TanStack Table, image previews, tree views for hierarchical data, and customizable lists",
    "type": "module",
    "main": "dist/server.js",
    "bin": {
        "visuals-mcp": "dist/server.js"
    },
    "scripts": {
        "build": "npm run build:ui && npm run build:server",
        "build:ui": "npm run build:table && npm run build:image && npm run build:tree && npm run build:list",
        "build:table": "vite build --config vite.config.table.ts",
        "build:image": "vite build --config vite.config.image.ts",
        "build:tree": "vite build --config vite.config.tree.ts",
        "build:list": "vite build --config vite.config.list.ts",
        "build:server": "tsc -p tsconfig.server.json",
        "serve": "node dist/server.js",
        "dev": "concurrently \"npm run watch:ui\" \"tsx watch server.ts\"",
        "watch:ui": "concurrently \"vite build --watch --config vite.config.table.ts\" \"vite build --watch --config vite.config.image.ts\" \"vite build --watch --config vite.config.tree.ts\" \"vite build --watch --config vite.config.list.ts\"",
        "publish:npm": "npm publish --registry https://registry.npmjs.org --access public"
    },
    "keywords": [
        "mcp",
        "mcp-server",
        "mcp-apps",
        "table",
        "tanstack-table"
    ],
    "author": "harrybin",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/harrybin/visuals-mcp.git"
    },
    "bugs": {
        "url": "https://github.com/harrybin/visuals-mcp/issues"
    },
    "homepage": "https://github.com/harrybin/visuals-mcp#readme",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com",
        "access": "public"
    },
    "files": [
        "dist",
        "doc",
        "README.md",
        "MCP_SETUP.md",
        "QUICKSTART.md",
        "EXAMPLES.md"
    ],
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.0.6",
        "@modelcontextprotocol/ext-apps": "^1.0.1",
        "@tanstack/react-table": "^8.20.5",
        "jspdf": "^2.5.2",
        "jspdf-autotable": "^3.8.3",
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@types/node": "^25.2.0",
        "@types/react": "^19.2.13",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.3",
        "concurrently": "^9.2.1",
        "tsx": "^4.21.0",
        "typescript": "^5.7.2",
        "vite": "^7.3.1",
        "vite-plugin-singlefile": "^2.0.4"
    }
}